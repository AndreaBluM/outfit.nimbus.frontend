<header>
    <div class="search">
        <div class="">
            <input type="text" placeholder="Search..." />
        </div>
        <h1>Nimbus Style</h1>
        <div class="small row"></div>
    </div>
</header>

<script type="module">
    import {
        animate,
        text,
        stagger,
    } from "https://cdn.jsdelivr.net/npm/animejs/+esm";
    text.split("h1", {
        lines: { wrap: "clip" },
    }).addEffect(({ lines }) =>
        animate(lines, {
            y: [
                { to: ["100%", "0%"] },
                { to: "-100%", delay: 750, ease: "in(3)" },
            ],
            duration: 950,
            ease: "out(3)",
            delay: stagger(200),
            loop: true,
            loopDelay: 700,
        }),
    );
</script>

<style>
    header {
        padding: 1rem 2rem;
        background-color: rgba(116, 13, 13, 0.15);
        backdrop-filter: blur(10px); /* Difuminado del fondo */
        -webkit-backdrop-filter: blur(10px); /* Compatibilidad Safari */
        border: 1px solid rgba(255, 255, 255, 0.3); /* Borde tenue */
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        border-radius: 18px;
        margin: 2rem 0rem 2rem 0rem;
    }
    .search {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        gap: 20rem;
    }

    header h1 {
        margin: 0;
        font-size: 2rem;
        color: var(--principal);
    }

    header input[type="text"] {
        padding: 0.8rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 28rem;
    }
    .split-char {
        color: var(--hex-current-1);
        background-color: var(--hex-current-3);
        outline: 1px solid var(--hex-current-2);
        border-radius: 0.25rem;
    }
</style>

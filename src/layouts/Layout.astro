---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Cloudflare Web Analytics -->
		<script
			defer
			src="https://static.cloudflareinsights.com/beacon.min.js"
			data-cf-beacon='{"token": "e2e0b456302d4de0891792687bf69380"}'
		></script>
		<!-- End Cloudflare Web Analytics -->
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			"Courier New",
			Courier,
			monospace;
		background-color: #fff;
		letter-spacing: -0.025rem;
	}

	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		width: 100%;
		max-width: 1100px;
		margin: 0 auto;
		overflow-x: hidden;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	:root {
		--color-base: #010a26;
		--principal: #8C0F26;
		--gris: #B1B7C3;
		--color-claro: #f3f0ed;
		/*#f3f0ed*/
		--negro: #0d0d0d;
	}

	h1,
	h2,
	h3,
	h4 {
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		font-weight: bold;
	}
</style>
